<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/app_background_color</item>
        <item name="editTextStyle">@style/CustomEditTextStyle</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/app_background_color</item>
        <item name="editTextStyle">@style/CustomEditTextStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomCardView" parent="CardView">
        <item name="cardBackgroundColor">@color/card_background_color</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/grid_margin</item>
    </style>

    <style name="CustomEditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/search_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:paddingStart">@dimen/standard_margin</item>
    </style>

</resources>
